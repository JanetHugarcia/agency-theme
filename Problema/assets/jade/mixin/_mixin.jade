
mixin subt(h,p)
	.sub
		h2=h
		if p==true
			p=p 
		else 
			p Lorem ipsum dolor sit amet consectetur.

mixin enlace(clase,direcc)
	a(class=clase,href=direcc)


mixin iservice(clase,h)
	.item-serv.text-center
